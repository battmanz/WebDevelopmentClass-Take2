    <title>@ViewBag.Title</title>
</head>
<body class="@ViewBag.BodyClass">
    <header role="banner">
        <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/">Web Development</a>
                </div>

                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">HTML & CSS <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Lesson 1", "Index", "Lessons", new { id = 1 }, null)</li>
                                <li>@Html.ActionLink("Lesson 2", "Index", "Lessons", new { id = 2 }, null)</li>
                                <li>@Html.ActionLink("Lesson 3", "Index", "Lessons", new { id = 3 }, null)</li>
                                <li>@Html.ActionLink("Lesson 4", "Index", "Lessons", new { id = 4 }, null)</li>
                                <li>@Html.ActionLink("Lesson 5", "Index", "Lessons", new { id = 5 }, null)</li>
                                <li>@Html.ActionLink("Lesson 6", "Index", "Lessons", new { id = 6 }, null)</li>
                                <li>@Html.ActionLink("Lesson 7", "Index", "Lessons", new { id = 7 }, null)</li>
                                <li>@Html.ActionLink("Lesson 8", "Index", "Lessons", new { id = 8 }, null)</li>
                            </ul>
                        </li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"> JavaScript <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Lesson 1", "Index", "JavaScriptLessons", new { id = 1 }, null)</li>
                                <li>@Html.ActionLink("Lesson 2", "Index", "JavaScriptLessons", new { id = 2 }, null)</li>
                                <li>@Html.ActionLink("Lesson 3", "Index", "JavaScriptLessons", new { id = 3 }, null)</li>
                                <li>@Html.ActionLink("Lesson 4", "Index", "JavaScriptLessons", new { id = 4 }, null)</li>
                                <li>@Html.ActionLink("Lesson 5", "Index", "JavaScriptLessons", new { id = 5 }, null)</li>
                                <li>@Html.ActionLink("Lesson 6", "Index", "JavaScriptLessons", new { id = 6 }, null)</li>
                                <li>@Html.ActionLink("Lesson 7", "Index", "JavaScriptLessons", new { id = 7 }, null)</li>
                                <li>@Html.ActionLink("Lesson 8", "Index", "JavaScriptLessons", new { id = 8 }, null)</li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Resources", "Resources", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer>
        <div class="container">

        </div>
    </footer>
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <script src="~/Scripts/jquery-ui.min-1.11.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/SyntaxHighlighter/shCore.js"></script>
    <script src="~/Scripts/SyntaxHighlighter/shBrushXml.js"></script>
    <script src="~/Scripts/SyntaxHighlighter/shBrushCss.js"></script>
    <script src="~/Scripts/SyntaxHighlighter/shBrushJScript.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
